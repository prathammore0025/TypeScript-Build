{
  "compilerOptions": {
    "outDir": "./dist",        // Output directory for compiled files
    "rootDir": "./src",         // Root directory of TypeScript source files
    "target": "ES6",            // JavaScript version to compile down to
    "module": "commonjs",       // Module system used in the output
    "strict": true              // Enable strict type-checking options
  },
  "include": ["src/**/*.ts"],    // Files to include for compilation
  "exclude": ["node_modules"]    // Files to exclude from compilation
}

